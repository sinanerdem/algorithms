#include "complex.h"


complex::complex(int a, int b) : _real(a), _imaginary(b), _name(NULL) {


	//calculate the length of name
	int digitsa = 0;
	while (a) {
		a /= 10;
		digitsa++;
	}
	int digitsb = 0;
	while (b) {
		b /= 10;
		digitsb++;
	}
	int lengthofname = 1+digitsa+1+1+digitsb;
	_name = new char[lengthofname+1];

	//put the characters one by one into name array
	a = _real;
	b = _imaginary;

	if (a<0){
		a = -a;
		_name[0]='-';
	}else{
		_name[0]='+';
	}
	for (int i=digitsa; i>=1; i--){
		_name[i]=a%10 + '0';
		a=a/10;
	}
	if (b<0){
		b = -b;
		_name[digitsa+1]='-';
	}else{
		_name[digitsa+1]='+';
	}
	_name[digitsa+2]='i';
	for (int i=lengthofname-1; i>digitsa+2; i--){
		_name[i]=b%10 + '0';
		b=b/10;
	}
	cout << _name;
}
complex::complex(const complex& c){
	_copy(b);
}
complex& complex::operator=(const complex& rhs){
	if(this!= &rhs){
		_release();
		_copy(rhs);
	}
	return *this;
}
complex::~complex(){
	delete[] _name;
}

void complex::setxy(int a, int b) {

}
